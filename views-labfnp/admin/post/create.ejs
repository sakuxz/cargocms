	pageSetUp();


	// PAGE RELATED SCRIPTS

	// pagefunction
	var pagefunction = function() {

		<%- include vue.ejs %>
		postApp.$mount("#post-create");
		postApp.setupForm("create");
		postApp.onEnterPageEdit();
		postApp.loadEventItem("create");
	};

	// end pagefunction

	// Load form valisation dependency
	loadScript("/assets/admin/js/plugin/jquery-form/jquery-form.min.js", function () {
		loadScript("/assets/admin/js/plugin/summernote/summernote.min.js", function(){
			loadScript("/assets/admin/js/plugin/bootstrap-tags/bootstrap-tagsinput.min.js", pagefunction);
		});
	});

</script>
