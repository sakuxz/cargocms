
<div class="row">
	<div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
		<h1 class="page-title txt-color-blueDark">

			<!-- PAGE HEADER -->
			<i class="fa-fw fa fa-pencil-square-o"></i>
				內容資料
			<span>>
				建立
			</span>
		</h1>
	</div>

</div>

<!-- widget grid -->
<section id="post-create" class="">


	<!-- START ROW -->

	<div class="row">


		<!-- NEW COL START -->
		<article class="col-sm-12 col-md-12 col-lg-12">

			<!-- Widget ID (each widget will need unique ID)-->
			<div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false" style="display: none;">
				<!-- widget options:
					usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

					data-widget-colorbutton="false"
					data-widget-editbutton="false"
					data-widget-togglebutton="false"
					data-widget-deletebutton="false"
					data-widget-fullscreenbutton="false"
					data-widget-custombutton="false"
					data-widget-collapsed="true"
					data-widget-sortable="false"

				-->
        <header role="heading">
          <div class="jarviswidget-ctrls" role="menu"></div>
					<span class="widget-icon"><i class="fa fa-edit"></i></span>
					<h2>新增內容</h2>
				  <span class="jarviswidget-loader">
            <i class="fa fa-refresh fa-spin"></i>
          </span>
				</header>

				<!-- widget div-->
				<div>

					<!-- widget edit box -->
					<div class="jarviswidget-editbox">
						<!-- This area used as dropdown edit box -->

					</div>
					<!-- end widget edit box -->

					<!-- widget content -->
					<div class="widget-body no-padding">
						<img v-show="data.item.coverType === 'img'" :src="data.item.coverUrl" alt="" class="img-responsive">
						<form id="post-form" class="smart-form">

							<%- include form.ejs %>

							<footer>
								<button type="button" v-on:click="cancel" class="btn btn-default">
									取消
								</button>
								<button type="submit" class="btn btn-primary">
									送出
								</button>
							</footer>
						</form>

					</div>
					<!-- end widget content -->

				</div>
				<!-- end widget div -->

			</div>
			<!-- end widget -->

		</article>
		<!-- END COL -->

	</div>

	<!-- END ROW -->

</section>
<!-- end widget grid -->


