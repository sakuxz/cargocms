<fieldset>

		<section>
			<img src="{{data.item.value}}" alt="" class="img-responsive">
		</section>
		<section>
			<label class="label">產品圖片</label>
			<%- include ../image/upload.ejs %>
    </section>

    <section row="">
      <label class="label key">版位</label>
      <label class="input state-disabled ">
      <input type="text" name="key" placeholder="" v-model="data.item.key" readonly disabled>
    </section>

    <section row="">
      <label class="label">尺寸</label>
      <label class="input state-disabled ">
      <input type="text" name="description" placeholder="" v-model="data.item.description" readonly disabled>
    </section>

		<section row="" class="hidden">
      <label class="label">Image</label>
      <label class="input state-disabled">
        <input type="text" name="value" placeholder="" v-model="data.item.value" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入Image</b></label>
    </section>

    <section row="">
      <label class="label link">連結網頁</label>
      <label class="input state-disabled ">
      <input type="text" name="link" placeholder="" v-model="data.item.link" disabled>
    </section>

</fieldset>
