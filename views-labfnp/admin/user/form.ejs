
<fieldset>

  <label class="label">權限</label>
  <section>
		<label class="checkbox">
		<input type="checkbox" id="admin" value="admin" v-model="data.item.RolesArray">
		<i></i>管理員</label>
	</section>

  <section>
    <label class="input"> <i class="icon-append fa fa-user"></i>
      <input type="text" name="username" placeholder="使用者名稱" v-model="data.item.username">
      <b class="tooltip tooltip-bottom-right">請輸入使用者名稱</b> </label>
  </section>

  <section>
    <label class="input"> <i class="icon-append fa fa-envelope-o"></i>
      <input type="email" name="email" placeholder="Email" v-model="data.item.email">
      <b class="tooltip tooltip-bottom-right">請輸入 Email</b> </label>
  </section>

  <div class="row">
    <section class="col col-6">
      <label class="input">
        <input type="text" name="firstName" placeholder="名" v-model="data.item.firstName">
      </label>
    </section>
    <section class="col col-6">
      <label class="input">
        <input type="text" name="lastName" placeholder="姓" v-model="data.item.lastName">
      </label>
    </section>
  </div>

  <section>
    <label class="input"> <i class="icon-append fa fa-lock"></i>
      <input type="password" name="password" placeholder="密碼" id="password" v-model="data.item.Passports[0].password">
      <b class="tooltip tooltip-bottom-right">請輸入密碼</b> </label>
  </section>

  <section>
    <label class="input"> <i class="icon-append fa fa-lock"></i>
      <input type="password" name="passwordConfirm" placeholder="確認密碼" v-model="data.option.passwordConfirm">
      <b class="tooltip tooltip-bottom-right">請輸入密碼</b> </label>
  </section>
