
<!-- CSS Page Style -->
<% LayoutUtils.addStylesheets('/assets/unify/css/pages/blog_masonry_3col.css'); %>

<div class="container content">

	<!-- cover -->
	<img src="/assets/labfnp/img/cover-page-lab.png" alt="" class="img-responsive" />

	<!-- Creator -->
	<% if (req.session.authenticated) { %>
		<div class="text-center">
		  <a href="/creator" class="btn btn-primary">
		    <i class="fa fa-flask fa-fw"></i>
		    創作一個新配方
		  </a>
		  <a href="/profile" class="btn btn-default">
		    <i class="fa fa-user fa-fw"></i>
		    我的配方
		  </a>
	  </div>
	<% } else { %>
		<div class="text-center">
			<p>請先<a href="/login">登入</a>或<a href="/register">立即註冊</a>一組帳號，才能開始創作自己的香水配方。</p>
		</div>
	<% } %>

	<!--=== Content Part ===-->

	<% if (recipes.length == 0) { %>

		<div class="container content">
			<div class="alert alert-success fade in margin-bottom-40">
				<h2>成為第一個創作者</h2>
				<p>請立即登入並開始創作，您將有機會成為本站的第一個創作者！</p>
			</div>
		</div>

	<% } else { %>

		<div class="blog_masonry_3col">

			<hr class="soften" />

			<div class="grid-boxes">

				<% recipes.forEach(function(recipe) { %>

					<div class="grid-boxes-in">
						<a href="/recipe/<%= recipe.id %>">
							<img class="img-responsive lazy" src="http://placehold.it/640x480?text=LOADING" data-src="http://loremflickr.com/640/480/perfume<%= ([',girl', ',boy', ''])[parseInt(Math.random() * 3)] %>/all?<%= Math.random() * Date.now() %>" alt="">
						</a>
						<div class="grid-boxes-caption">
							<h3><a href="/recipe/<%= recipe.id %>"><%= recipe.perfumeName %></a></h3>
							<ul class="list-inline grid-boxes-news">
								<li><i class="fa fa-user"></i> <a href="#"><%= recipe.authorName %></a></li>
								<li>|</li>
								<li><i class="fa fa-clock-o"></i> 2016-01-01</li>
								<!--<li>|</li>
								<li><a href="#"><i class="fa fa-comments-o"></i> 06</a></li>-->
							</ul>
							<% if (recipe.message) { %><p><%= recipe.message %></p><% } %>
						</div>
					</div>

				<% }); %>

			</div><!--/container-->
		</div>

	<% } %>
	<!--=== End Content Part ===-->

</div>


<% LayoutUtils.addScriptBlock(`
$(document).ready(function(){
  var $container = $('.grid-boxes');

  var gutter = 30;
  var min_width = 240;
  $container.imagesLoaded( function(){
		$(function() {
      $("img.lazy").unveil(screen.height);
    });
    $container.masonry({
      itemSelector : '.grid-boxes-in',
      gutterWidth: gutter,
      isAnimated: true,
      columnWidth: function( containerWidth ) {
        var box_width = (((containerWidth - 2*gutter)/3) | 0) ;

        if (box_width < min_width) {
            box_width = (((containerWidth - gutter)/2) | 0);
        }

        if (box_width < min_width) {
            box_width = containerWidth;
        }

        $('.grid-boxes-in').width(box_width);

        return box_width;
      }
    });
  });
});
`); %>