<% LayoutUtils.addScriptBlock(`
jQuery(document).ready(function() {

	$('#loadScentNote').on('click', function(){
		loadScentNote();
		$('#loadScentNote').toggleClass("active");
		$('#myOrder').removeClass("active");
		$('#myRecipe').removeClass("active");
		$('#scentNote').fadeIn();
		$('#timeline').hide();
		$('#order').hide();
	});
	$('#myRecipe').on('click', function(){
		$('#loadScentNote').removeClass("active");
		$('#myOrder').removeClass("active");
		$('#myRecipe').toggleClass("active");
		$('#scentNote').hide();
		$('#timeline').fadeIn();
		$('#order').hide();
	});
	$('#myOrder').on('click', function(){
    loadOrder();
		loadEventOrder();
		$('#loadScentNote').removeClass("active");
		$('#myOrder').toggleClass("active");
		$('#myRecipe').removeClass("active");
		$('#scentNote').hide();
		$('#timeline').hide();
		$('#order').fadeIn();
	});

	var userId = $("#follow-button").data("user-id");

	$("#follow-button").on('click', function() {
		var status = $(this).text();
		var that = $(this);
		if(status == '追蹤'){
			$.ajax({
				url: "/api/user/follow/" + userId,
				method: 'get',
				dataType: 'json',
				cache: false
			}).done(function(result) {
				console.log(result)
				that.toggleClass('btn-primary')
				.toggleClass('btn-default')
				.text('取消追蹤').blur()
			});
		}

		if(status == '取消追蹤'){
			$.ajax({
				url: "/api/user/unfollow/" + userId,
				method: 'get',
				dataType: 'json',
				cache: false
			}).done(function(result) {
				that.toggleClass('btn-primary')
				.toggleClass('btn-default')
				.text('追蹤').blur()
			});
		}
	})

  $(".fn-signin-required").on("click", function(event){
    event.preventDefault();
    swal({
      title: '請先登入',
      text: '此操作需為會員，請先進行登入。',
      type: 'warning',
      showCancelButton: true,
      confirmButtonColor: "#e6caa8",
      confirmButtonText: "登入",
      cancelButtonText: "註冊",
      closeOnConfirm: false,
      closeOnCancel: false,
    },function(isConform){
      if(isConform){
        open('/login?url=/lab', '_self');
      }else{
        open('/register', '_self');
      }
    });
    document.querySelector('.sweet-overlay').onclick = function(event) {
      swal.close();
    };
    $(document).on('keydown', function(evt){
      if(evt.keyCode == 27){
        swal.close();
      }
    });
  });
});
`); %>
