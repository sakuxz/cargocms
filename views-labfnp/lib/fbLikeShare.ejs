<style>
.share {
  max-width: 91px;
}
.like {
  max-width: 80px;
}
</style>

<% var shareUrl ='' %>
<% if(req.url === "/") { %>
  <% shareUrl = encodeURI( 'https://www.facebook.com/' + SocialService.getFBPageId()); %>
  <% if(AuthService.isWebView(req.headers['user-agent'])) { %>
    <!-- 按讚 -->
    <iframe class="share" src="https://www.facebook.com/plugins/like.php?href=<%= shareUrl %>&width=96&layout=button_count&action=like&size=large&show_faces=false&share=false&height=21&appId=<%= SocialService.getFBAppId() %>" height="46" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
  <% } else { %>
    <!-- 分享 + 按讚 -->
    <iframe src="https://www.facebook.com/plugins/like.php?href=<%= shareUrl %>&width=146&layout=button_count&action=like&size=large&show_faces=false&share=true&height=46&appId=<%= SocialService.getFBAppId() %>" width="146" height="46" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
  <% } %>
<% } else { %>
  <% shareUrl = encodeURI(socialData.url); %>
  <% if(AuthService.isWebView(req.headers['user-agent'])) { %>
    <!-- 按讚 -->
    <iframe class="like" src="https://www.facebook.com/plugins/like.php?href=<%= shareUrl %>&width=96&layout=button_count&action=like&size=large&show_faces=false&share=false&height=21&appId=<%= SocialService.getFBAppId() %>" height="46" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
  <% } else { %>
    <!-- 分享 + 按讚 -->
    <iframe src="https://www.facebook.com/plugins/like.php?href=<%= shareUrl %>&width=146&layout=button_count&action=like&size=large&show_faces=false&share=true&height=46&appId=<%= SocialService.getFBAppId() %>" width="146" height="46" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
  <% } %>
  <script>
    var shareUrl = "<%= shareUrl %>";
  </script>
<% } %>
